{
  "compilerOptions": {
    /* Visit https://aka.ms/tsconfig.json to read more about this file */
    
    /* Basic Options */
    "incremental": true,
    "target": "esnext",
    "module": "commonjs",
    "removeComments": true,

    /* Strict Type-Checking Options */
    "strict": false,
    "esModuleInterop": true,

    /* Advanced Options */
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
    
  },
  "compileOnSave": true
}